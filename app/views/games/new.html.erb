<!-- app/views/games/new.html.erb -->

<h1>New game</h1>

<div class="container">
  <!-- Displaying the letters -->
  <div class="grid">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>

  <!-- Form for submitting the word -->
  <p>What is the longest word you can find?</p>
  <%= form_with(url: score_path, method: :post, data: { turbo: false }) do |form| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= form.text_field :word, placeholder: "Enter your word", required: true %>
    <%= form.hidden_field :grid, value: @letters.join(',') %> <!-- Pass the grid as a comma-separated string -->
    <%= form.submit 'Play' %>
  <% end %>
</div>
